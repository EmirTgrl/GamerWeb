@model ResultContactUsDto
@{
    ViewData["Title"] = "Mesaj Detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped">
    <tr>
        <th>Gönderen Email:</th>
        <th>@Model.Mail</th>
    </tr>
    <tr>
        <th>Konu:</th>
        <th>@Model.Subject</th>
    </tr>
    <tr>
        <th>Mesaj İçeriği:</th>
        <th>@Model.Body</th>
    </tr>
</table>

<a asp-controller="Message" asp-action="Index" class="btn btn-dark">Mesajlara Dön</a>
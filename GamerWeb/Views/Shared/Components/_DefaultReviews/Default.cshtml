@model List<ResultReviewDto>
<section class="review-section spad set-bg" data-setbg="/game-warrior-gh-pages/img/review-bg.png">
    <div class="container">
        <div class="section-title">
            <h2>Son İncelemeler</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="review-item">
                        <div class="review-cover">
                            <img src="@item.GameImage" alt="@item.GameName" />
                        </div>
                        <div class="review-text">
                            <h5>
                                <a href="@Url.Action("ReviewDetails", "Review", new { id = item.ReviewId })">@item.GameName</a>
                            </h5>
                            <p>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


<style>
    .review-section {
        padding: 50px 0; /* Yüksekliği ayarlamak için */
    }

    .review-item {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s;
        margin-bottom: 30px;
        display: flex;
        flex-direction: column; /* Dikey hizalama için */
        height: 100%; /* Kartın tamamını kapsaması için */
    }

        .review-item:hover {
            transform: scale(1.05);
        }

    .review-cover {
        width: 100%;
        height: 200px; /* Sabit yükseklik */
        background-size: cover;
        background-position: center;
        object-fit: cover; /* Resmi kapsayıcıya uydurmak için */
    }

        .review-cover img {
            width: 100%; /* Resmi kapsayıcının genişliği */
            height: 100%; /* Resmi kapsayıcının yüksekliği */
            object-fit: cover; /* Resmi kesme yöntemi */
        }

    .review-text {
        padding: 15px;
        flex-grow: 1; /* İçeriğin kartı doldurmasını sağlar */
    }

        .review-text h5 {
            margin: 0;
            font-size: 18px;
        }

        .review-text p {
            margin: 10px 0 0;
            color: #666;
            flex-grow: 1; /* Paragraf içeriğinin esnek olmasını sağlar */
        }
</style>


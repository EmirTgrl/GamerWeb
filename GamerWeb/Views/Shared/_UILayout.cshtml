            </div>
            <!-- site menu -->
            <nav class="main-menu">
                <ul>
                    <li><a asp-controller="Default" asp-action="Index">Anasayfa</a></li>
                    <li><a asp-controller="Game" asp-action="Index">Oyunlar</a></li>
                    <li><a asp-controller="Review" asp-action="Index">İncelemeler</a></li>
                    <li><a asp-controller="News" asp-action="Index">Haberler</a></li>
                    <li><a asp-controller="Chat" asp-action="Index">Chatbot</a></li>

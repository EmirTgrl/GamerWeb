<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header section -->
    <header class="header-section">
        @*  <span id="themeToggle" style="cursor: pointer;" title="Modu Değiştir">
        <i class="fas fa-sun"></i>
        </span> *@
        <span id="themeToggle" style="cursor: pointer;" title="Modu Değiştir">

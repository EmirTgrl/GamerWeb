    <script src="~/game-warrior-gh-pages/js/jquery-3.2.1.min.js"></script>
    <script src="~/game-warrior-gh-pages/js/bootstrap.min.js"></script>
    <script src="~/game-warrior-gh-pages/js/owl.carousel.min.js"></script>
    <script src="~/game-warrior-gh-pages/js/jquery.marquee.min.js"></script>
    <script src="~/game-warrior-gh-pages/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js"></script>

    <script>
        // Sayfa yüklendiğinde tema durumunu kontrol et
        const currentTheme = localStorage.getItem('theme');
        if (currentTheme) {
            document.documentElement.setAttribute('data-bs-theme', currentTheme);
            document.getElementById('themeToggle').innerHTML = currentTheme === 'dark' ? '<i class="bi bi-moon-fill"></i>' : '<i class="bi bi-sun-fill"></i>';
        }

        document.getElementById('themeToggle').addEventListener('click', () => {
            const theme = document.documentElement.getAttribute('data-bs-theme');
            const newTheme = theme === 'dark' ? 'light' : 'dark';
            document.documentElement.setAttribute('data-bs-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            document.getElementById('themeToggle').innerHTML = newTheme === 'dark' ? '<i class="bi bi-moon-fill"></i>' : '<i class="bi bi-sun-fill"></i>';
        });
    </script>
</body>
</html>

<style>
    #themeToggle {
        position: absolute; /* Sağ tarafa yerleştirmek için absolute konumlandırma */
        right: 20px; /* Sağdan 20 piksel uzaklık */
        top: 20px; /* Üstten 20 piksel uzaklık */
        font-size: 1.5rem; /* İkon boyutunu büyütmek için */
        cursor: pointer; /* İmleci el işareti yapar */
    }
</style>
    </header>
    <!-- Header section end -->
    @RenderBody()
    <!-- Footer section -->
    <footer class="footer-section">
        <div class="container">
            <ul class="footer-menu">
                <li><a asp-controller="Default" asp-action="Index">Anasayfa</a></li>
                <li><a asp-controller="Game" asp-action="Index">Oyunlar</a></li>
                <li><a asp-controller="Review" asp-action="Index">İncelemeler</a></li>
                <li><a asp-controller="News" asp-action="Index">Haberler</a></li>
                <li><a asp-controller="Chat" asp-action="Index">Chatbot</a></li>
                <li><a asp-controller="Contact" asp-action="Index">İletişim</a></li>
            </ul>
            <p class="copyright">
                Copyright &copy;<script>document.write(new Date().getFullYear());</script> Tüm Hakları Saklıdır | Emir Tuğrul Aytekin
            </p>
        </div>
    </footer>
    <!-- Footer section end -->

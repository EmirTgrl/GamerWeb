        </span>
        @* <button class="btn btn-danger" id="btnSwitch">Mod</button> *@
        <div class="container">
            <!-- logo -->
            <a class="site-logo" asp-controller="Default" asp-action="Index">
                <img src="~/game-warrior-gh-pages/img/logo.png">
            </a>
